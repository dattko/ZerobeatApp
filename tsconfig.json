{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@text": ["components/typography/Typography"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@contexts/*": ["contexts/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"],
      "@constants/*": ["constants/*"]
    }
  }
}
